<Window x:Class="Laba5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba5"
        mc:Ignorable="d"
        Title="MainWindow" MaxHeight="500" MaxWidth="600" MinHeight="500" MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="281*"/>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="65*"/>
        </Grid.RowDefinitions>

        <Label Content="Введите строки" FontWeight="SemiBold" FontSize="16" Width="146" Margin="30,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="31"/>

        <TextBox x:Name="outPanel" Margin="30,0,30,0" TextWrapping="Wrap" VerticalAlignment="Center" Height="261" IsReadOnly="True" Grid.Row="1"/>

        <Label Content="Число слов в выделеной строке: " FontWeight="SemiBold" FontSize="16" Width="261" Height="32" Margin="30,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2"/>

        <Button Content="ПУСК" VerticalAlignment="Center" HorizontalAlignment="Center" Width="164" Height="35" Grid.Row="3" Click="MainBtnClick" />
    </Grid>
</Window>
