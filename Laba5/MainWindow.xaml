<Window x:Class="Laba5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba5"
        mc:Ignorable="d"
        Title="Лаб.раб. N5" MaxHeight="500" MaxWidth="500" MinHeight="400" MinWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="240*"/>
            <RowDefinition Height="44*"/>
        </Grid.RowDefinitions>
        <Label Content="Введите строки:" FontWeight="SemiBold" FontSize="16" Width="146" Margin="30,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="31"/>

        <ComboBox x:Name="comboBox" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0" Width="432" Height="30" Grid.Row="1"/>
        <TextBox x:Name="outPanel" Margin="26,33,26,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="248" IsReadOnly="True" Grid.Row="1"/>

        <Button Content="Выход" FontWeight="SemiBold" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" Width="160" Height="35" Grid.Row="3" Click="ExitBtnClick"/>
    </Grid>
</Window>
