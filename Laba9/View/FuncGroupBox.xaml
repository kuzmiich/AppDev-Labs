<UserControl x:Class="Laba9.View.FuncGroupBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Laba9.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <GroupBox 
            Header="U(x)" 
            Margin="5, 0, 5, 10" 
            Grid.Column="0" 
            Grid.Row="0" 
            >
            <ListView x:Name="ListViewRadio">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <RadioButton  Checked="RadioButton_Checked" Margin="3"  
                                     IsChecked="{Binding Path=IsFuncChecked}"
                                     Content="{Binding Path=GetContentText}" 
                                     GroupName="{Binding Path=GetGroupName}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </GroupBox>
    </Grid>
</UserControl>
